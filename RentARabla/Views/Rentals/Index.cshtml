@model RentARabla.Helpers.RentalsSearch


<script src="~/scripts/Rentals.js"></script>
<h2>Index</h2>

<div align ="left" class="form-horizontal" style= "width: 40%; margin:0px">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.CarType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CarType, Model.CarTypeList, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CarType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CarModel.CarBrand, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CarModel.CarBrand, Enumerable.Empty<SelectListItem>(), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CarModel.CarBrand, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CarModel, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CarModel, Enumerable.Empty<SelectListItem>(), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CarModel, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div>
    @Html.Partial("_CarSection", Model.Cars)
</div>






